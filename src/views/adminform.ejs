<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Forms</title>
    <%- include('partials/bootstrap.ejs') %>
    <script type="module" src="./adminform.js" defer></script>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <main class="container mt-0 mt-lg-5 p-5 border border-primary-subtle border-opacity-25 rounded-5">

        <!-- Admin nav -->
        <ul class="nav nav-tabs nav-fill mb-3">
            <li class="nav-item">
                <a href="/admin" class="nav-link">Current votes</a>
            </li>
            <li class="nav-item">
                <a href="/adminusers" class="nav-link">Change users</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link active">Change forms</a>
            </li>
        </ul>

        <div class="row mb-5 px-3 d-flex gap-3">
            <button type="button" id="refresh-forms" class="col-12 col-lg-2 btn btn-primary fw-bold">Refresh forms</button>
            <button type="button" id="new-form" class="col-12 col-lg-2 btn btn-primary fw-bold">New form</button>
        </div>

        <!-- Create user form -->
        <div id="form-form-toggle" class="row d-flex justify-content-center mb-3 d-none">
            <form id="create-form-form" class="col-12 col-lg-6 p-4 border border-primary-subtle rounded-3" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8);">
                <div id="form-error-response"></div>
                <h4 class="mb-3 text-primary">New Form</h2>
                <div class="mb-5 form-floating">
                    <input type="text" name="newform-name" id="newform-name" class="form-control" placeholder="test" required>
                    <label for="newform-name" class="form-label">Title</label>
                    <div class="form-text text-primary mt-2">Required</div>
                </div>

                <div class="mb-3 form-floating">
                    <input type="text" name="option1" id="option1" class="form-control options" placeholder="test" required>
                    <label for="option1" class="form-label">Option 1</label>
                    <div class="form-text text-primary mt-2">Required</div>
                </div>
                <div class="mb-3 form-floating">
                    <input type="text" name="option1" id="option2" class="form-control options" placeholder="test" required>
                    <label for="option2" class="form-label">Option 2</label>
                    <div class="form-text text-primary mt-2">Required</div>
                </div>
                <div class="mb-3 form-floating">
                    <input type="text" name="option3" id="option3" class="form-control options" placeholder="test">
                    <label for="option3" class="form-label">Option 3</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="text" name="option4" id="option4" class="form-control options" placeholder="test">
                    <label for="option4" class="form-label">Option 4</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="text" name="option5" id="option5" class="form-control options" placeholder="test">
                    <label for="option5" class="form-label">Option 5</label>
                </div>
                <button type="submit" class="btn btn-warning px-5 py-2 btn-lg fw-bolder w-100">Create form</button>
            </form>
        </div>

        <!-- User-container -->
        <div id="user-container" class="container-fluid row">

            <!-- Form Table -->
            <table class="table table-bordered border-primary-subtle w-auto mx-auto">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Options</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>

    </main>

    <!-- Placeholder warning text -->
    <div id="warning-container" class="position-fixed top-0 start-50 translate-middle-x w-50">

    </div>
    
    <%- include('partials/footer.ejs') %>
</body>
</html>